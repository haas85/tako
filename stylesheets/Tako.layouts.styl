.line
  width 100%
  display block

  &:after
    display block
    content ""
    clear both

  & > *
    float left
    display inline
    text-align center

  & > .one_column
    width COLUMN

  & > .one_gap
    margin-left COLUMN

  & > .two_column
    width COLUMN * 2

  & > .two_gap
    margin-left COLUMN * 2

  & > .three_column
    width COLUMN * 3

  & > .three_gap
    margin-left COLUMN * 3

  & > .four_column
    width COLUMN * 4

  & > .four_gap
    margin-left COLUMN * 4

  & > .five_column
    width COLUMN * 5

  & > .five_gap
    margin-left COLUMN * 5

  & > .six_column
    width COLUMN * 6

  & > .six_gap
    margin-left COLUMN * 6

  & > .seven_column
    width COLUMN * 7

  & > .seven_gap
    margin-left COLUMN * 7

  & > .eight_column
    width COLUMN * 8

  & > .eight_gap
    margin-left COLUMN * 8

  & > .nine_column
    width COLUMN * 9

  & > .nine_gap
    margin-left COLUMN * 9

  & > .ten_column
    width COLUMN * 10

  & > .ten_gap
    margin-left COLUMN * 10

.grid
  width 100%
  display-flexbox()

  &.vertical
    height inherit
    flexbox-vertical()
    box-align stretch

  &.horizontal
    flexbox-horizontal()

  & > *
    flexbox-weight(1)

.box_0
  flexbox-weight(0)

.box_2
  flexbox-weight(2)

.box_3
  flexbox-weight(3)

.box_4
  flexbox-weight(4)

.box_5
  flexbox-weight(5)

.box_6
  flexbox-weight(6)

.box_7
  flexbox-weight(7)

.box_8
  flexbox-weight(8)

.box_9
  flexbox-weight(9)






