BLUE    = #1f4dbb
RED     = #d10400
YELLOW  = #f0d31e
BLACK   = #000000
WHITE   = #ffffff
GREY    = #c0c0c0
GREEN   = #02ac00
PINK    = #ff56d0
PURPLE  = #9f2ae4
BROWN   = #813a0e
ORANGE  = #ff7404
FIREFOX = #FF6600

.blue
  color #FFF !important
  background-color BLUE!important
.red
  color #FFF !important
  background-color RED!important
.yellow
  color #000 !important
  background-color YELLOW!important
.black
  color #FFF !important
  background-color BLACK!important
.white
  color #000!important
  background-color WHITE!important
.grey
  color #FFF !important
  background-color GREY!important
.green
  color #FFF !important
  background-color GREEN!important
.pink
  color #FFF !important
  background-color PINK!important
.purple
  color #FFF !important
  background-color PURPLE!important
.brown
  color #FFF !important
  background-color BROWN!important
.orange
  color #FFF !important
  background-color ORANGE!important
.firefox
  color #FFF !important
  background-color FIREFOX!important

body.no_flat, body.noflat
  & .blue
    background-image -webkit-linear-gradient(lighten(BLUE, 35%), BLUE)!important
    background-image -moz-linear-gradient(lighten(BLUE, 35%), BLUE)!important
    background-image -ms-linear-gradient(lighten(BLUE, 35%), BLUE)!important
    background-image -o-linear-gradient(lighten(BLUE, 35%), BLUE)!important
    background-image linear-gradient(lighten(BLUE, 35%), BLUE)!important
  & .red
    background-image -webkit-linear-gradient(lighten(RED, 40%), RED)!important
    background-image -moz-linear-gradient(lighten(RED, 40%), RED)!important
    background-image -ms-linear-gradient(lighten(RED, 40%), RED)!important
    background-image -o-linear-gradient(lighten(RED, 40%), RED)!important
    background-image linear-gradient(lighten(RED, 40%), RED)!important
  & .yellow
    background-image -webkit-linear-gradient(lighten(YELLOW, 40%), YELLOW)!important
    background-image -moz-linear-gradient(lighten(YELLOW, 40%), YELLOW)!important
