// Fix nav flexbox
// Reduce header height
// Forms without background

BACKGROUND = #060606
TEXT = #f4f4f4

body[data-os="wp"]
  background-image none !important
  background-color BACKGROUND

  -webkit-box-shadow none !important
  -moz-box-shadow none !important
  box-shadow none !important
  font 14px "tako_wp"

  & *
    font-family "tako_wp" !important

  & article
    & > header
      background-color BACKGROUND !important
      color TEXT !important
      background-image none !important
      font-weight 300
      & > h1
        width auto
        margin-left 10px
        font-size 1.3em
        color TEXT
      & > nav
        float right
        position static
        & button, & .button, & input[type=submit], & input[type=reset], & input[type=button]
          background-color transparent
          background-image none!important
          color TEXT
          border-radius 0 !important
          border 0
          border-bottom 1px solid THEME
        & .counter
          background-color transparent

    & > nav
      background-color BACKGROUND !important
      color TEXT !important
      background-image none !important
      font-weight 300
      border none !important
      padding-left 10px
      // flexbox-pack-start()
      // vendor('align-items', flex-start)
      display -webkit-box
      display -moz-box
      display -ms-flexbox
      display -webkit-flex
      display flex
      -webkit-box-direction normal
      -moz-box-direction normal
      -webkit-box-orient horizontal
      -moz-box-orient horizontal
      -webkit-flex-direction row
      -ms-flex-direction row
      flex-direction row
      -webkit-flex-wrap nowrap
      -ms-flex-wrap nowrap
      flex-wrap nowrap
      -webkit-box-pack start
      -moz-box-pack start
      -webkit-justify-content flex-start
      -ms-flex-pack start
      justify-content flex-start
      -webkit-align-content stretch
      -ms-flex-line-pack stretch
      align-content stretch
      & *
        flexbox-weight(0)
        color TEXT !important
        border none !important
        font-size 1.1em !important
        text-align left
        padding-left 4px
        padding-right 10px
        -webkit-box-ordinal-group 1
        -moz-box-ordinal-group 1
        flexbox-order(9)
        -webkit-align-self auto
        -ms-flex-item-align auto
        align-self auto
        width auto
        &:hover, &:active
          background-color transparent !important
          box-shadow none !important
        &.current
          background-color transparent !important
          font-size 1.5em !important
          flexbox-order(0)
          & + *
            flexbox-order(1)
            & + *
              flexbox-order(2)
              & + *
                flexbox-order(3)
                & + *
                  flexbox-order(4)
                  & + *
                    flexbox-order(5)
                    & + *
                      flexbox-order(6)
                      & + *
                        flexbox-order(7)
                        & + *
                          flexbox-order(8)
  & section
    background-color BACKGROUND
  & footer
    background-color lighten(BACKGROUND, 15%) !important
    & *
      background-color lighten(BACKGROUND, 15%) !important
      &.current
        border-top 0 !important
  & form, & .form
    & fieldset
      background-color transparent
      border none
      & legend
        background-color transparent
        color TEXT
  & label
    color TEXT
  & input[type="text"], input[type="password"], input[type="date"], input[type="datetime"], input[type="email"], input[type="number"], input[type="search"], input[type="tel"], input[type="time"], input[type="url"], label > select, textarea
    border-radius 0 !important
  & ul, & ol
    background-color transparent
    border none
    border-radius 0
    & li
      border none
      border-radius 0
      color TEXT
      background-color transparent
