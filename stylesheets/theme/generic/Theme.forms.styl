input[type="radio"], input[type="checkbox"]
  &.circle, &.square, &.switch
    border-color #adadad
    background-color #dbdbdb
    box-shadow inset 0 0 8px #adadad

  &:not(.switch)
    &:checked
      background-color lighten(THEME, 35%)
      color lighten(THEME, 35%)
      box-shadow inset 0 0 0 13px lighten(THEME, 30%)

  &.switch
    &:after
      background-color white
      border 1px solid #d0d0d0
      box-shadow inset 0 0 8px #d9d9d9

    &:checked
      border-color lighten(THEME, 30%)
      box-shadow inset 0 0 0 13px lighten(THEME, 30%)

input[type="range"]
  background-color #e0e0e0
  border-color #b9b9b9

  &::-webkit-slider-thumb
    background-color SECONDARY_TEXT
    border 1px solid #d0d0d0
    box-shadow inset 0 0 10px #d9d9d9

  &::-moz-range-thumb
    background-color SECONDARY_TEXT

  &::-moz-range-track
    background-color #e0e0e0
    border-color #b9b9b9

  &::-ms-thumb
    background-color SECONDARY_TEXT

  &::-ms-track
    background-color #e0e0e0
    color transparent

  &::-ms-fill-lower
    background-color lighten(THEME, 30%)

  &::-ms-fill-upper
    background-color #cecece

  &:active
    &::-ms-fill-lower
      background-color lighten(THEME, 30%)

    &::-ms-fill-upper
      background-color lighten(THEME, 30%)

    &::-moz-range-track
      background-color lighten(THEME, 30%)

label.select
  color #b9b9b9

  &:hover
    color lighten(THEME, 30%)

    & > select
      border-color lighten(THEME, 30%)

