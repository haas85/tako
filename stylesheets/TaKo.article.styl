article
  height 100%
  width 100%
  margin 0
  padding 0
  z-index 0
  opacity 0
  position absolute
  top 0
  bottom 0
  left 0
  right 0

  display-flexbox-vertical()

  flexbox-align-stretch()
  flexbox-pack-justify()

  transition-duration SECTION_TRANSITION_TIME

  &.active
    opacity 1
    z-index SECTION_INDEX

  & > article
    position relative
    opacity 1

  &.asided
    & header
      margin-left ASIDE_WIDTH + ASIDE_PADDING * 2 !important

      & > nav
        &.right
          transition-duration SECTION_TRANSITION_TIME
          position fixed
          z-index HEADER_NAV_INDEX
          right - (ASIDE_WIDTH + ASIDE_PADDING * 2) !important

          & > button
            margin-right 5px

        &.left
          transition-duration SECTION_TRANSITION_TIME
          position fixed
          z-index HEADER_NAV_INDEX
          margin-left ASIDE_WIDTH + ASIDE_PADDING * 2 !important

          & > button
            margin-left 5px

    & footer
      margin-left ASIDE_WIDTH + ASIDE_PADDING * 2 !important

  &.non_animated
    transition-duration 0ms !important
    & *
      transition-duration 0ms !important

  & header
    position relative
    flexbox-order(1)
    flexbox-weight(0)
    top 0
    left 0
    right 0
    height HEADER_HEIGHT
    max-height HEADER_HEIGHT
    line-height HEADER_HEIGHT
    width 100%
    z-index HEADER_INDEX
    text-align center
    transition-duration SECTION_TRANSITION_TIME

    & > h1
      font-weight bold
      display inline-block
      position absolute
      text-align center
      width 100%
      left 0
      margin-top 0
      z-index HEADER_H1_INDEX

      & > img
        width auto
        height HEADER_HEIGHT - 8
        margin-top 4px

    & > nav
      height HEADER_HEIGHT
      max-height HEADER_HEIGHT

      &.right
        position absolute
        z-index HEADER_NAV_INDEX
        right 0

        & > button
          margin-right 5px

      &.left
        position absolute
        z-index HEADER_NAV_INDEX
        left 0

        & > button
          margin-left 5px

article > nav
  flexbox-weight(0)
  flexbox-order(2)
  font-size 1.2em
  width 100%
  line-height HEADER_HEIGHT
  padding 0
  display-flexbox-horizontal()

  box-direction normal
  box-pack justify
  box-align stretch

  & > *
    flexbox-weight(1)
    text-align center
    width 100%
    display block
    height HEADER_HEIGHT
    line-height HEADER_HEIGHT
    font-size 1em!important
    margin-top 0!important
    transition-duration 200ms

  & .icon, & .icon:before
    font-size 1em

footer
  position relative
  bottom 0
  left 0
  right 0
  flexbox-weight(0)
  flexbox-order(4)
  width 100%
  height FOOTER_HEIGHT
  line-height FOOTER_HEIGHT
  z-index FOOTER_INDEX

  display-flexbox-horizontal()

  box-direction normal
  box-pack justify
  box-align stretch
  transition-duration SECTION_TRANSITION_TIME

  & nav
    margin 0
    flexbox-weight(1)
    height FOOTER_HEIGHT
    line-height FOOTER_HEIGHT
    padding 0
    width 100%

    display-flexbox-horizontal()
    box-direction normal
    box-pack justify
    box-align stretch

    & > *
      flexbox-weight(1)
      text-align center
      width 100%
      display block
      height FOOTER_HEIGHT

      & > *
        line-height FOOTER_HEIGHT
        height FOOTER_HEIGHT

      &.active
        background-color rgba(250,250,250,0.15)

section
  position relative
  width 100%
  display none
  margin 0
  overflow-x hidden
  overflow-y scroll
  -webkit-overflow-scrolling touch
  box-flex 1
  flex 1 9999999 auto
  flexbox-order(3)

  &.horizontal
    width auto
    min-width 100%

  &.active
    display block

  & > div
    position absolute


