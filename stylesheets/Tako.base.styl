body, html
  padding 0
  margin 0
  width 100%
  height 100%
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  position absolute

  top 0
  bottom 0
  left 0
  right 0

  backface-visibility hidden
  -webkit-backface-visibility hidden
  overflow hidden
  -ms-content-zooming none
  -ms-touch-action none
  -ms-overflow-style none
  display -ms-grid
  -ms-grid-rows 1fr
  -ms-grid-columns 1fr

  & *
    -webkit-tap-highlight-color rgba(0,0,0,0)
    -ms-overflow-style none

    &::-webkit-scrollbar
      width 0 !important

.indented > *
  padding INDENT

.wide
  width 100%!important

.smallest
  font-size FONT_SIZE_SMALLEST !important

.small
  font-size FONT_SIZE_SMALL !important

.big
  font-size FONT_SIZE_BIG !important

.biggest
  font-size FONT_SIZE_BIGGEST !important

.onleft
  float left

.onright
  float right

.clear:after
  display block
  content ""
  clear both

.middle
  vertical-align middle

.block
  display block!important

.inline
  display inline!important

.inline-block
  display inline-block!important

.padding.top
  padding-top INDENT!important

.padding.bottom
  padding-bottom INDENT!important

.padding.left
  padding-left INDENT!important

.padding.right
  padding-right INDENT!important

.margin.top
  margin-top INDENT!important

.margin.bottom
  margin-bottom INDENT!important

.margin.left
  margin-left INDENT!important

.margin.right
  margin-right INDENT!important

.max-height
  height 100%

.max-line-height
  line-height 100%

.align-left
  text-align left!important

.align-center
  text-align center!important

.align-right
  text-align right!important

.align-justify
  text-align justify!important

.scroll

  &.vertical
    overflow-y scroll

  &.horizontal
    overflow-x scroll

.progress_bar
  width 100%
  height 10px
  display block

  & .percent
    height inherit
    display block
    transition-duration PROGRESSBAR_TRANSITION_TIME

.clear:after
  display block
  content ""
  clear both

strong
  font-weight bold
  font-size 1.1rem

small
  opacity 0.6
  font-size 1.1rem

.hidden
  display none!important

[data-visible]:not(.show)
  display none

// Overthrow
.overthrow-enabled
  & .scroll, & section, & aside
    overflow auto
    -webkit-overflow-scrolling touch