button, .button, input[type=submit], input[type=reset], input[type=button]
  text-indent 0
  border 0
  display inline-block
  font-weight 300
  font-style normal
  line-height 2.50em
  text-decoration none
  text-align center
  padding-left 1em
  padding-right 1em
  overflow hidden
  white-space nowrap

  &:hover
    box-shadow inset 0 0 5em rgba(0,0,0,0.1), inset 0 1px rgba(0,0,0,0.1)!important

  &:active
    box-shadow inset 0 0 5em rgba(0,0,0,0.2), inset 0 1px rgba(0,0,0,0.2)!important

  &::-moz-focus-inner
    border 0

  &:focus
    outline none

  &.smallest
    line-height 2em

    &>img
      height 1.3em
      top 3px

      &+span
        font-size FONT_SIZE_SMALLEST
    &.icon:empty
      padding-top 7px
      padding-bottom 6px

  &.small
    line-height 2.25em

    &.icon:empty
      padding-top 7px
      padding-bottom 6px

    &>img
      height 1.55em
      top 4px

      &+span
        font-size FONT_SIZE_SMALL

  &.big
    line-height 2.75em

    &>img
      height 2.05em
      top 7px

      &+span
        font-size FONT_SIZE_BIG

  &.biggest
    line-height 3em

    &>img
      height 2.30em
      top 8px

      &+span
        font-size FONT_SIZE_BIGGEST

  &.wide
    position relative

    &.icon:before
      position absolute
      left 12px

  &.icon:before, & .icon
    font-size 1.5em

  &.icon
    &:before
      margin-right .5em
    &:empty:before
      margin-right -1px

  & *:nth-child(2)
    margin-left .5em

  &>img
      width auto
      height 1.8em
      margin-right 0
      position relative
      top 6px

      &+span
        position relative
        top 0
        margin-left .4em!important

a.button
  &.wide
    padding-left 0
    padding-right 0
    padding-top 3px
    padding-bottom 2px

header
  :not(.button)
    padding-top 0

  & button, & .button, & input[type=submit], & input[type=reset], & input[type=button]
    min-width HEADER_HEIGHT - 4
    text-indent 0
    display inline-block
    font-weight 300
    font-style normal
    text-decoration none
    text-align center
    background-color rgba(0, 0, 0, 0)
    background-image none
    height HEADER_HEIGHT - 4
    margin-top 2px
    margin-bottom 2px
    line-height HEADER_HEIGHT - 4
    font-size 1.3em!important
    padding-top 6px
    padding-left 0.6em!important
    padding-right 0.6em!important

    &.icon
      &:before
        margin-right .5em
      &:empty:before
        margin-right 0
        font-size 1.5em!important

    &.icon:before
      font-size 1em!important

    & .counter
      position relative
      top -0.55em
      margin-left 0.5em !important
      margin-right 0.5em !important
      line-height 15px
      -webkit-border-radius 2px
      -moz-border-radius 2px
      border-radius 4px
      padding .1em .33em .2em .3em
      font-size FONT_SIZE_SMALLEST

    &>span.icon
      margin-right .4em
      font-size 1rem!important

    &>img
      position initial!important
      width auto!important
      height HEADER_HEIGHT - 16!important
      margin-right .4em!important

      &+span
        position relative!important
        top -10px!important
        margin-left 0!important

  & button.button
    text-indent 0
    display inline-block
    font-weight 300
    font-style normal
    line-height 35px
    text-decoration none
    text-align center
    box-shadow 1px 1px rgba(255, 255, 255, .25)

    & .counter
      margin-left 0.05em
      margin-right 0.05em

article > nav
  & button, & .button, & input[type=submit], & input[type=reset], & input[type=button]
    // font-weight bold
    font-style normal
    text-decoration none
    text-align center
    background-color rgba(0, 0, 0, 0)
    background-image none

footer
  & .icon:before
    font-size 1.4rem

  & .icon:empty
    &:before
      margin-right 0
      font-size 1.8rem !important

  & button, & .button, , & input[type=submit], & input[type=reset], & input[type=button]
    height inherit
    width 100%
    background-image none
    background-color rgba(0, 0, 0, 0)

    & .counter
      position relative
      top - INDENT * 1.5
      line-height 15px
      -webkit-border-radius 4px
      -moz-border-radius 4px
      border-radius 4px
      padding .2em .5em .2em .5em
      font-size FONT_SIZE_SMALLEST

section
  & button, & .button, & input[type=submit], & input[type=reset], & input[type=button]
    padding-top 2px
    padding-bottom 3px
    margin 5px 0

body.noflat, body.no_flat
  & section, & header
    & button, & .button, & input[type=submit], & input[type=reset], & input[type=button]
      border-radius 5px
